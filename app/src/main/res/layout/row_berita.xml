<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/authorTextViewAll"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="27dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/user_symbol"
            android:src="@drawable/user"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:layout_toLeftOf="@id/authorTextViewAll"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/calendar"
            android:src="@drawable/calendar"
            android:layout_toEndOf="@id/authorTextViewAll"
            android:layout_toRightOf="@id/authorTextViewAll"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/publish_news"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/calendar"
            android:layout_toRightOf="@id/calendar"
            android:textSize="11dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
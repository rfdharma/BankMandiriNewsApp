<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/authorTextViewAll"
            android:layout_width="68dp"
            android:layout_height="64dp"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/user_symbol"
            android:src="@drawable/user"
            android:layout_toEndOf="@id/newsImageView"
            android:layout_toRightOf="@id/newsImageView"
            android:layout_toLeftOf="@id/authorTextViewAll"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/calendar"
            android:src="@drawable/calendar"
            android:layout_toEndOf="@id/authorTextViewAll"
            android:layout_toRightOf="@id/authorTextViewAll"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/publish_news"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/calendar"
            android:layout_toRightOf="@id/calendar"
            android:textSize="13sp" />

        <Button
            android:id="@+id/bookmarkButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/publish_news"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            android:layout_marginEnd="-60dp"
            android:layout_toStartOf="@id/publish_news"
            android:background="@drawable/baseline_bookmark_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>